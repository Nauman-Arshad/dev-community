<!-- component -->
<section class="container mx-auto p-6 font-mono">
  <div class="w-full mb-8 overflow-hidden rounded-lg shadow-lg">
    <div class="w-full overflow-x-auto">
      <table class="w-full">
        <thead>
          <tr class="text-md font-semibold tracking-wide text-left text-gray-900 bg-gray-100 uppercase border-b border-gray-600">
            <th class="px-4 py-3">Name</th>
            <th class="px-4 py-3">Contact</th>
            <th class="px-4 py-3">Country</th>
            <th class="px-4 py-3">Date of Birth</th>
            <th class="px-4 py-3"></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody class="bg-white">
          <tr class="text-gray-700">
            <td class="px-4 py-3 border">
              <div class="flex items-center text-sm">
                <div class="relative w-8 h-8 mr-3 rounded-full md:block">
                  <%= image_tag 'user', class:"object-cover w-full h-full rounded-full"  %>
                  <div class="absolute inset-0 rounded-full shadow-inner" aria-hidden="true"></div>
                </div>
                <div>
                  <p class="font-semibold text-black"><%= user.first_name + ' ' + user.last_name %> </p>
                  <p class="text-xs text-gray-600"><%= user.profile_title%></p>
                </div>
              </div>
            </td>
            <td class="px-4 py-3 text-ms font-semibold border"><%=user.email %> </td>
            <td class="px-4 py-3 text-xs border">
              <span class="px-2 py-1 font-semibold leading-tight text-green-700 bg-green-100 rounded-sm"> <%= user.country %> </span>
            </td>
            <td class="px-4 py-3 text-sm border"><%= user.date_of_birth%></td>
            <td class="px-4 py-3 text-sm border">
              <button class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
                View
              </button>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</section>